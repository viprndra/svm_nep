    <script>
        function btnstudentsubmit(obj) {
           /// debugger;
            var name = $("#User_Name").val();
            var pass = $("#password").val()
            if (name == null || name == "" || name == undefined) {
                alert('Please fill User Name')
                return false;

            }
            else if (pass == null || pass == "" || pass == undefined) {
                alert('Please fill user password')
                return false;


            }
            else {

                $("#Btn_login").trigger('click');
            }
        }
    </script>

    <script>
            $(document).ready(function () {

                var qual = $("#User_Name").val();
                if (qual == " " || qual == undefined || qual == null) {
                    alert("Please Enter User Name!!!");
                    $("#User_Name").focus(); return false;
                }



                if ('@ViewBag.sms' == "Login") {
                 /*   alert('Login Successfully ');*/
                    window.location.href = "/Admin/Dashboard";
                }
                else if ('@ViewBag.sms' == "NotLogin") {
                    alert('Login Not Successfully ');
                    window.location.href = window.location.href
                }




            })
    </script>

